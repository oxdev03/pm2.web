{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["SERVER_NAME"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["DB_URI"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "start": {
      "dependsOn": ["lint", "build"]
    },
    "lint": {},
    "lint:fix": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"]
    },
    "format": {},
    "format:check": {}
  }
}
